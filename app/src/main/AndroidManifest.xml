<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.company.ramez.worldgame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ramez.company.worldgame.activity_challenge_mode"  android:screenOrientation="portrait"/>
        <activity
            android:name="ramez.company.com.worldgame.activity_challenge_mode"
            android:screenOrientation="portrait" />
        <activity android:name=".activity_new_challenge_game" />
        <activity
            android:screenOrientation="portrait"
            android:name=".CountryList"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_country_list"
            android:theme="@style/FullscreenTheme" />
        <activity android:screenOrientation="portrait" android:name=".CountrList" />
        <activity android:screenOrientation="portrait" android:name=".Country_List_Item" />
        <activity  android:screenOrientation="portrait" android:name=".CountryList2Activity" />
        <activity android:screenOrientation="portrait" android:name=".ChallengeModeSummaryScreenActivity"></activity>
    </application>

</manifest>
